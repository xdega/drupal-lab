/**
 * Implements hook_preprocess_page_title().
 */
function glider_preprocess_page_title(&$variables) {
  $classes = "text-2xl leading-8 font-bold tracking-tight text-gray-900";
  //dpm($variables['title']['#markup']);
  $title = "<h2 class=${classes}>New Title</h2>";
  $variables['title'] = "$title";
}
